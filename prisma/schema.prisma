generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid()) // UUID é mais seguro que ID numérico
  email     String   @unique
  password  String // Lembre-se de salvar o hash (bcrypt), não a senha real!
  name      String?
  createdAt DateTime @default(now())

  // Relacionamento: Um usuário pode ter várias landing pages
  pages LandingPage[]
}

model LandingPage {
  id        String  @id @default(uuid())
  title     String // Título interno (ex: "Campanha de Natal")
  slug      String  @unique // O endereço da página (ex: meusanb.com/black-friday)
  published Boolean @default(false)

  // O CORAÇÃO DO PROJETO: Aqui fica todo o layout (Hero, Features, Footer)
  content Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Chave estrangeira para o dono da página
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Relacionamento: Uma página pode capturar vários leads (formulários)
  leads Lead[]
}

model Lead {
  id            String   @id @default(uuid())
  customerEmail String // O email da pessoa que se cadastrou na landing page
  customerName  String? // O nome (se tiver campo nome)
  submittedAt   DateTime @default(now())

  // De qual página veio esse lead?
  pageId String
  page   LandingPage @relation(fields: [pageId], references: [id])
}
